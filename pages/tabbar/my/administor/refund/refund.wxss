.container {
	position: relative;
	padding: 20rpx;
}
.list{
	position: relative;
	margin-bottom: 20rpx;
	border:1px solid #d3ebff;
	box-shadow: #a5d6ff 2px 2px 0;
}
.list view{
	font-size: 26rpx;
	padding: 8rpx;
}
.createTime{
	color: #999;
}
.btn{
	position: absolute;
	bottom: 10rpx;
	right:10rpx;
	font-weight: bold;
	color: #ff314c;
}
