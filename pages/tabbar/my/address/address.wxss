.container{
  position: relative;
  min-height: 100vh;
  background: #eff3ff;
}
.explain{
  padding: 30rpx;
}
.explain-e{
  background-image: linear-gradient(155deg,#000,#4b4b4b);
}
.explain-e .e-title{
  color: #f7ce9e;
}
.explain-e .e-title::before{
  background: rgb(133, 104, 72);
}

.explain-e .e-desc{
  overflow: hidden;
  border-radius: 0;
  opacity: 1;
  padding-left: 40rpx;
  padding-bottom: 30rpx;
}
.e-desc-m{
  position: relative;
  color: #f7ce9e;
  font-size: 26rpx;
  padding-bottom: 10rpx;
}
.e-desc-m::before{
  content:"";
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #f7ce9e;
  left: -40rpx;
  top: 10rpx;
  box-shadow: #d69c63 0 0 25rpx;
}
.e-desc-sub{
  color: #6f6d6e;
  font-size: 26rpx;
  padding-bottom: 10rpx;
}

.e-title{
  /* color: #d69c63; */
  color: #333;
  font-size: 34rpx;
  position: relative;
  z-index: 2;
}
.e-title::before{
  content: "";
  position: absolute;
  width: 95rpx;
  height: 20rpx;
  border-radius: 15rpx;
  background:#29de99;
  opacity: .28;
  z-index: -1;
  bottom: -5rpx;
  left: -5rpx;
}
.e-subtitle{
  padding-top: 5rpx;
  color: #6f6d6e;
  font-size: 24rpx;
  padding-bottom: 25rpx;
}
.e-desc{
  overflow: hidden;
  border-radius: 50%;
  opacity: .2;
}
.e-desc image{
  width: 150rpx;
  height: 150rpx;
  display: block;
}
.e-flex{
  flex-wrap: wrap;
  justify-content: space-between;
}