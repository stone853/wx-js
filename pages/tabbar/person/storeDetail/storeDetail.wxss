.side-box{
  width:750rpx;
}
.side-box,.side-main-2{
  display: flex;
  height: calc(100vh - 62rpx);
	overflow-y: auto;
}
.side-main-2{
  flex:1;
}
.van-sidebar{
  height: calc(100vh - 62rpx);
  overflow-y: auto;
  background: #f7f8fa;
}
.side2.van-sidebar,.side2 .van-sidebar-item{
  width: 100rpx;
  background: #fcfcfc;
}
.side2 .van-sidebar-item{
  padding-right: 5rpx;
}
.van-sidebar .van-sidebar-item--selected{
  border-color: rgb(29, 153, 248);
}
.van-sidebar-item--selected view{
  color: rgb(29, 153, 248);
}
.side-main-3{
  flex: 1;
}

.item {
  display: flex;
  padding: 10rpx;
  margin-top: 40rpx;
}

.item-typedesc{
  margin-top: 8rpx;
  width: auto;
  padding: 5rpx 10rpx;
  background:#0BB7A5;
  color: #fff;
  border-radius:5rpx;
  display: inline-block;
  font-size: 24rpx;
}
.item image {
  width: 170rpx;
  height: 170rpx;
  border-radius: 8rpx;
  background: #eee;
}

.item .item-content {
  flex: 1;
  padding-left: 20rpx;
  position: relative;
}

.item .item-subhead {
  color: #999;
  font-size: 22rpx;
}

.item .price {
  position: absolute;
  bottom: 0;
  color: #ff1044;
  font-size: 32rpx;
}
.item .item-add{
  line-height: 0;
  position: absolute;
  bottom: 0;
  right: 20rpx;
  font-size: 54rpx;
  color: rgb(29, 153, 248);
}
.item .item-choosespec{
  display: inline-block;
  line-height: 1;
  font-size: 24rpx;
  color:#fff;
  background: rgb(29, 153, 248);
  border-radius: 15rpx;
  padding: 6rpx 6rpx;
  right: 10rpx;
}
.shop-cart{
  position: fixed;
  right: 25rpx;
  bottom: 124rpx;
  width: 108rpx;
  height: 108rpx;
  z-index: 333;
}
.shop-cart image{
  width:100%;
  height: 100%;
}
.shop-cart view{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 9rpx;
  top:4rpx;
  color:#fff;
  font-size:24rpx;
  line-height: 31rpx;
  text-align: center;
  background:#FC1F2E;
  border:2rpx solid #FC1F2E;
  border-radius:50%;
}
.hasNumber{
  position: absolute;
  top: 0;
  width: 100%;
  text-align: center;
  transition: all .3s ease;
  opacity: 0;
  font-size: 30rpx;
  color: rgb(29, 153, 248);
}
.showNumber{
  opacity: 1;
  top: -22rpx;
}

.item-choosespec .showNumber{
  top: -36rpx;
  opacity: 1;
}
.eckes-submit{
  background: rgb(29, 153, 248);
  color: #fff;
}
.section-content {
  padding:15rpx;
}
.section-content .i-c-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 25rpx;
  padding-left: 22rpx;
  border-left: 3px solid #ff5b5b;
}

.section-content .i-size {
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.section-content .i-size-item {
  background: #e7e7e7;
  border-radius: 10rpx;
  padding: 0 25rpx;
  line-height: 55rpx;
  margin-right: 15rpx;
  font-size: 26rpx;
  margin-bottom: 15rpx;
  position: relative;
}

.section-content .size-action {
  background: #ff5b5b;
  color: #fff;
}

