.store {
  position: relative;
  margin-bottom: 75rpx;
  box-shadow: #eee 0 15rpx 25rpx;
}

.store .store-bg {
  opacity: .75;
  width: 750rpx;
  height: 200rpx;
}

.store .store-content {
  padding: 10rpx 15rpx 10rpx 35rpx;
  align-items: center;
}

.store .store-cover {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.store .store-name {
  font-size: 32rpx;
  font-weight: bold;
  padding-left: 25rpx;
  flex: 1;
}

.store .store-subtitle {
  opacity: .5;
  font-size: 26rpx;
  margin-top: 8rpx;
}

.store .store-typeName {
  display: inline-block;
  border-radius: 8rpx;
  background: #e62b2b;
  color: #fff;
  padding: 4rpx 8rpx;
}

.store .store-btn {
  padding-left: 20rpx;
  transition: all .3s ease;
  font-weight: bold;
  color: #006eff;
  font-size: 32rpx;
}

.section {
  margin-bottom: 25rpx;
}

.tips {
  text-align: center;
}

.tips image {
  width: 80vw;
}
