.card{
  position: relative;
  padding: 80rpx 60rpx 0 60rpx;
  height: 360rpx;
  background-image: linear-gradient(155deg,#000,#6f6d6e);
}
.card-box{
  position: relative;
  height: 280rpx;
  padding-top: 25rpx;
  background:linear-gradient(155deg,rgb(255, 85, 33),#ffa600);
  border-radius: 15rpx 15rpx 0 0;
}
.card-month{
  border-radius: 15rpx;
  width: 690rpx;
  display: block;
  box-shadow:#000 0 0 5px;
  margin-bottom:25rpx;
}
.card-tip{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 24rpx;
  color: #c27e00;
}
.card-tip van-icon{
  vertical-align: bottom;
  font-size: 32rpx;
}
.vip{
  font-family: Arial, Helvetica, sans-serif;
  font-size: 188rpx;
  font-weight: bold;
  background:linear-gradient(25deg,rgb(255, 251, 0),#ffae00);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  opacity: .4;
  position: absolute;
  bottom:-44rpx;
  right: 45rpx;
}
.vip-level{
  padding-left: 40rpx;
  padding-right: 40rpx;
  border-radius: 0 40rpx 40rpx 0;
  line-height:42rpx;
  display: inline-block;
  background:rgb(255, 196, 0);
  color: #666;
  margin-bottom: 10rpx;
}
.vip-time{
  padding-left: 40rpx;
  color:#fff;
  text-shadow: #888 0 1rpx 0;
}
.vip-no{
  position: absolute;
  bottom: 5rpx;
  right:15rpx;
  font-size: 24rpx;
}
.vip-up{
  position: absolute;
  bottom: 15rpx;
  left:40rpx;
  display: inline-block;
  padding:0 20rpx;
  color: #ffae00;
  line-height: 42rpx;
  background: #fff;
  border-radius: 42rpx;
  font-weight: bold;
  box-shadow: 0 2px 0 #ff4141;
}

.icons{
  display: flex;
}
.hr{
  height: 2rpx;
  background: #9b9b9b;
  margin-bottom: 15rpx;
}
.icons>view{
  flex: 1;
  text-align: center;
  height: 150rpx;
  font-size: 24rpx;
  padding-top: 24rpx;
}
.icons-i{
  font-size: 48rpx;
  color: #ffae00;
}
.icons-t{
  font-size: 24rpx;
}
.icons-b{
  background: #fff6e6;
}
.p-title{
  color: #ccc;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  padding: 25rpx 0;
  position: relative;
}
.p-title::before{
  content: "";
  position: absolute;
  height: 2px;
  background: #ccc;
  width: 30rpx;
  left: 260rpx;
  top: 50%;
}
.p-title::after{
  content: "";
  position: absolute;
  height: 2px;
  background: #ccc;
  width: 30rpx;
  right: 260rpx;
  top: 50%;
}
swiper{
  height: 320rpx;
}
.p-box{
  padding: 0 10rpx 20rpx 10rpx;
}
.special .swiper-item{
  height: 250rpx;
  width: 250rpx;
  padding:10rpx;
  box-sizing: border-box;
}
.special .swiper-item image{
  width: 230rpx;
  height: 230rpx;
}
.s-title{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.vip-question{
  position: absolute;
  top: 22rpx;
  right: 22rpx;
  color: #fff;
  font-size: 38rpx;
  text-shadow: rgb(255, 34, 34) 2rpx 2rpx 0;
}

.p-merchant{
  display: flex;
  flex-wrap: wrap;
}
.p-merchant-item{
  width: 365rpx;
  padding: 0 10rpx;
}
.p-merchant-item image{
  width: 345rpx;
  height: 345rpx;
}
.p-m-title{
  font-weight: bold;
  font-size: 32rpx;
  color: #333;
}
.p-m-t-r{
  float: right;
  font-size: 32rpx;
  color: rgb(255, 55, 55);
}
.p-m-subtitle{
  padding-bottom: 20rpx;
}
.p-m-s-badge{
  display: inline-block;
  padding: 5rpx 15rpx;
  background:rgb(129, 129, 129);
  color: #fff;
  border-radius: 25rpx;
  font-size: 24rpx;
}
.b1{
  background:red;
}
.explain{
  background-image: linear-gradient(155deg,#000,#4b4b4b);
  padding: 30rpx;
  min-height: 100vh;
}
.e-title{
  /* color: #d69c63; */
  color: #f7ce9e;
  font-size: 34rpx;
  font-weight: bold;
  position: relative;
  text-shadow: rgb(71, 71, 71) 1rpx 1rpx 0;
  z-index: 2;
}
.e-title::before{
  content: "";
  position: absolute;
  width: 95rpx;
  height: 20rpx;
  border-radius: 15rpx;
  background: rgb(133, 104, 72);
  opacity: .8;
  z-index: -1;
  bottom: -5rpx;
  left: -5rpx;
}
.e-subtitle{
  padding-top: 5rpx;
  color: #6f6d6e;
  font-size: 24rpx;
  padding-bottom: 25rpx;
}
.e-desc{
  padding-left: 40rpx;
  padding-bottom: 30rpx;
}
.e-desc-m{
  position: relative;
  color: #f7ce9e;
  font-size: 26rpx;
  padding-bottom: 10rpx;
}
.e-desc-m::before{
  content:"";
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #f7ce9e;
  left: -40rpx;
  top: 10rpx;
  box-shadow: #d69c63 0 0 25rpx;
}
.e-desc-sub{
  color: #6f6d6e;
  font-size: 26rpx;
  padding-bottom: 10rpx;
}

.privilege{
  padding: 30rpx;
}
.privilege .e-title{
  color: #333;
  text-shadow: unset;
}
.privilege .e-subtitle{
  color: #999;
  text-shadow: unset;
}
.privilege .e-title::before{
  background: #f7ce9e;
}

.privilege-star{
  width: 690rpx;
  background: #ebebeb;
  border-radius: 15rpx;
  overflow:hidden;
  box-shadow: #999 0 1rpx 15rpx;
  margin-bottom: 40rpx;
}
.p-s-top{
  background: #1d1f24;
  background-image: linear-gradient(155deg, #1d1f24, #393f47);
  border-radius: 15rpx;
  color: #fff;
  overflow:hidden;
  position: relative;
  box-shadow: #999 0 1rpx 15rpx;
  padding: 20rpx;
}
.p-s-bottom{
  background-image: linear-gradient(to right, #ebebeb, #fff, #ebebeb);
  line-height:70rpx;
  padding:0 20rpx;
  color: #999;
  font-size: 24rpx;
}
.p-s-b-r{
  float: right;
  color: #d69c63;
  font-weight: bold;
}
.p-s-t-i{
  padding-right: 15rpx;
  color: #f7ce9e;
  opacity: .8;
}