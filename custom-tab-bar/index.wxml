<!--miniprogram/custom-tab-bar/index.wxml-->
<view class="tab-bar {{selected==0?'shouye':''}}" style="padding-bottom:{{bottomTabbarSaveHeight/2}}px;">
  <view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}"
    bindtap="switchTab">

    <image class="item-image" src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></image>
    <view class="item-view" style="color: {{selected=== index ? selectedColor : color}}">{{item.text}}</view>
  </view>
</view>